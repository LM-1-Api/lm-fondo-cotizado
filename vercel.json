{
  "version": 2,
  "functions": {
    "api/*.js": { "runtime": "nodejs18.x", "maxDuration": 10 }
  },
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/spot", "dest": "api/spot.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
